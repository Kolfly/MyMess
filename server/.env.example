# ================================================
# CONFIGURATION BASE DE DONNÉES
# ================================================

# PostgreSQL Connection (choisir une méthode)
# Méthode 1: URL complète
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Méthode 2: Paramètres séparés
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_app
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# ================================================
# SÉCURITÉ ET TOKENS
# ================================================

# Clé secrète pour JWT (générer une clé forte en production)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ================================================
# SERVEUR ET ENVIRONNEMENT
# ================================================

# Port d'écoute
PORT=3001

# Environnement
NODE_ENV=development

# Debug SQL (afficher les requêtes Sequelize)
DEBUG_SQL=false

# ================================================
# BASE DE DONNÉES - GESTION DES DONNÉES
# ================================================

# IMPORTANT: Variable de protection des données
# Par défaut, les données existantes sont préservées lors du redémarrage
# Mettre à 'true' SEULEMENT pour forcer une réinitialisation complète
# ⚠️  ATTENTION: Cela supprime TOUTES les données existantes !
FORCE_DB_RESET=false

# ================================================
# EMAIL (optionnel - pour vérification email)
# ================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ================================================
# CORS (optionnel)
# ================================================

CORS_ORIGIN=http://localhost:4200